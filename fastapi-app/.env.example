# ==============================
# Application
# ==============================
ENV=development
DEBUG=True
PROJECT_NAME=FastAPI App
API_V1_STR=/api

# ==============================
# Security
# ==============================
# Set a strong random key in production (e.g., openssl rand -hex 32)
SECRET_KEY=change-me-in-prod
ALGORITHM=HS256
# 24 hours
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ==============================
# Database
# ==============================
# Default: local SQLite file (no external service required)
SQLALCHEMY_DATABASE_URI=sqlite:///./app.db

# Example Postgres DSN (uncomment and edit to use Postgres)
# Requires adding a Postgres driver (e.g., psycopg) to your deps
# SQLALCHEMY_DATABASE_URI=postgresql+psycopg://postgres:postgres@localhost:5432/fastapi_app
